<h1>Liste des associations</h1>
<form method="get" name="formulaire" action="{{ url('association.new') }}">
  <button type="submit">Ajouter</button>
</form>
<table>
<thead>
  <tr>
    <th>ID</th>
    <th>ID-USER</th>
    <th>ID-PC</th>
    <th>ACTION</th>
  </tr>
</thead>
<tbdoy>
{% for assoc in Association %}
   <tr>
     <td>{{assoc.id}}</td>
     <td>{{assoc.user.id}}</td>
     <td>{{assoc.pc.id}}</td>
     <td>
       <form method="post" name="formulaire" action="{{ url('association.delete', {id: assoc.id}) }}">
            <button type="submit">Supprimer</button>
        </form>
      </td>
      <td>
        <form method="get" name="formulaire" action="{{ url('association.edit', {id: assoc.id}) }}">
          <button type="submit">Modifier</button>
        </form>
      </td>
   </tr>
{% endfor %}
</tbdoy>
</table>
